#!/bin/bash
#
export GOENV_DISABLE_GOPATH=1

#大文字小文字を区別しない補完
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'

# install go
export PATH=$PATH::$HOME/.goenv/bin
eval "$(goenv init -)"
export GOPATH=$HOME
export PATH=$PATH::$GOPATH/bin


# install node
export PATH="$HOME/.nodenv/bin:$PATH"
eval "$(nodenv init -)"
